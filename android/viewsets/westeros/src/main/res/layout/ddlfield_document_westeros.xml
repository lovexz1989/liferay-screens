<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.viewsets.westeros.ddl.form.DDLDocumentFieldView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<TextView
		android:id="@+id/liferay_ddl_label"
		style="@style/westeros_label"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@android:color/white"
		android:visibility="gone"/>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<EditText
			android:id="@+id/liferay_ddl_edit_text"
			style="@style/westeros_dark_edit_text"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:clickable="true"
			android:drawableRight="@drawable/westeros_perm_media_tinted"
			android:editable="false"
			android:focusable="false"
			android:inputType="none"/>

		<ProgressBar
			android:id="@+id/liferay_document_progress"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="end|center_vertical"
			android:visibility="invisible"/>
	</FrameLayout>

</com.liferay.mobile.screens.viewsets.westeros.ddl.form.DDLDocumentFieldView>