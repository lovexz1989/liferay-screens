<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="westeros_theme" parent="android:Theme.Material.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary_westeros</item>
		<item name="colorAccent">@color/colorPrimaryDark_westeros</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark_westeros</item>
		<item name="android:colorPrimary">@color/colorPrimary_westeros</item>
		<item name="android:colorAccent">@color/colorPrimaryDark_westeros</item>
		<item name="android:colorPrimaryDark">@color/colorPrimaryDark_westeros</item>
		<item name="android:textColorPrimary">@color/textColorPrimary_westeros</item>
		<item name="android:textColorSecondary">@color/light_gray_westeros</item>

		<item name="android:textViewStyle">@style/westeros_text_view</item>
		<item name="android:editTextStyle">@style/westeros_edit_text</item>
		<item name="android:buttonStyle">@style/westeros_button</item>
		<item name="editTextStyle">@style/westeros_edit_text</item>
		<item name="buttonStyle">@style/westeros_button</item>

		<item name="android:typeface">serif</item>
		<item name="windowActionBar">false</item>
		<item name="android:windowContentOverlay">@null</item>

		<item name="themeName">westeros_theme</item>
	</style>

	<style name="westeros_edit_text" parent="android:Widget.Material.EditText">
		<item name="android:background">@drawable/westeros_edit_text_selector</item>
		<item name="android:singleLine">true</item>
		<item name="android:layout_height">@dimen/westeros_block_height</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:textColorHint">@color/textColorSecondary_westeros</item>
		<item name="android:layout_marginTop">@dimen/westeros_edit_text_top_margin</item>
		<item name="android:layout_marginBottom">@dimen/westeros_edit_text_bottom_margin</item>
		<item name="android:paddingLeft">@dimen/westeros_edit_text_left_padding</item>
		<item name="android:paddingRight">@dimen/westeros_edit_text_drawable_padding</item>
		<item name="android:paddingTop">@dimen/westeros_edit_text_drawable_padding</item>
		<item name="android:paddingBottom">@dimen/westeros_edit_text_drawable_padding</item>
		<item name="android:layout_marginLeft">@dimen/westeros_side_margin</item>
		<item name="android:layout_marginRight">@dimen/westeros_side_margin</item>
	</style>

	<style name="westeros_text_view" parent="android:Widget.Material.TextView">
		<item name="android:layout_height">@dimen/westeros_block_height</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_marginTop">@dimen/westeros_edit_text_top_margin</item>
		<item name="android:layout_marginBottom">@dimen/westeros_edit_text_bottom_margin</item>
		<item name="android:paddingLeft">@dimen/westeros_side_margin</item>
		<item name="android:paddingRight">@dimen/westeros_side_margin</item>
	</style>

	<style name="westeros_button" parent="android:Widget.Material.Button">
		<item name="android:textAllCaps">true</item>
		<item name="android:background">@drawable/westeros_button_ripple</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:layout_height">@dimen/westeros_block_height</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:textSize">18sp</item>
		<item name="android:layout_marginBottom">@dimen/westeros_button_bottom_margin</item>
		<item name="android:layout_marginLeft">@dimen/westeros_side_margin</item>
		<item name="android:layout_marginRight">@dimen/westeros_side_margin</item>
	</style>

	<style name="westeros_progress_bar">
		<item name="android:layout_height">@dimen/westeros_block_height</item>
		<item name="android:elevation">24dp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:visibility">invisible</item>
	</style>

</resources>